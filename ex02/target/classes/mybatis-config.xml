<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	<!-- MyBatis 프레임워크에서 사용할 환경 설정(Database와 관련된 설정) -->
	
	<properties>
		<!-- 상수 정의: 테이블 이름, 컬럼 이름 -->
		<property name="tbl_board" value="TBL_BOARD"/>
		<property name="board.bno" value="BNO"/>
		<property name="board.title" value="TITLE"/>
		<property name="board.content" value="CONTENT"/>
		<property name="board.userid" value="USERID"/>
		<property name="board.regdate" value="REGDATE"/>
		<property name="board.readcnt" value="READCNT"/>
		<property name="board.replycnt" value="REPLYCNT"/>
		
		<property name="tbl_reply" value="TBL_REPLY"/>
		<property name="reply.rno" value="RNO"/>
		<property name="reply.bno" value="BNO"/>
		<property name="reply.rtext" value="RTEXT"/>
		<property name="reply.userid" value="USERID"/>
		<property name="reply.regdate" value="REGDATE"/>
	</properties>
	
	<typeAliases>
		<package name="edu.spring.ex.domain" />
	</typeAliases>
	
</configuration>